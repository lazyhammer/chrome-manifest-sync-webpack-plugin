{
    "compilerOptions": {
        "outDir": "dist",
        "strict": true,
        "allowJs": false,
        "pretty": true,
        "resolveJsonModule": true,
        "sourceMap": false,
        "skipLibCheck": true,
        "declaration": true,
        "baseUrl": ".",
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "allowUnreachableCode": true,
        "lib": [
            "es2017",
            "es2018"
        ]
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules",
        "dist"
    ]
}
